<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<data>

		<variable
			name="model"
			type="com.mashup.ui.model.AttendanceModel" />
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">


		<androidx.appcompat.widget.AppCompatImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="36dp"
			android:src="@drawable/ic_mashong_bottom"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/bg_gradient"
			android:layout_width="match_parent"
			android:layout_height="90dp"
			android:layout_marginStart="13dp"
			android:layout_marginEnd="13dp"
			android:background="@drawable/bg_shadow"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<androidx.appcompat.widget.LinearLayoutCompat
			android:id="@+id/layout_name_box"
			android:layout_width="match_parent"
			android:layout_height="76dp"
			android:layout_marginStart="20dp"
			android:layout_marginTop="7dp"
			android:layout_marginEnd="20dp"
			android:layout_marginBottom="7dp"
			android:background="@drawable/bg_common_dialog"
			android:orientation="horizontal"
			app:layout_constraintTop_toTopOf="parent">

			<androidx.appcompat.widget.LinearLayoutCompat
				android:id="@+id/layout_total_attendance"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginStart="16dp"
				android:padding="8dp">

				<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/total_attendance"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:text="@string/total_attendance"
					android:textAppearance="@style/TextAppearance.Mashup.Header3_14_B"
					android:textColor="#A2ACC2" />

				<androidx.appcompat.widget.AppCompatImageView
					android:id="@+id/btn_detail"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="2dp"
					android:padding="2dp"
					android:src="@drawable/ic_detail" />
			</androidx.appcompat.widget.LinearLayoutCompat>

			<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/tv_platform"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginEnd="24dp"
				android:gravity="end"
				android:text="2점"
				android:textAppearance="@style/TextAppearance.Mashup.Header1_24_B"
				android:textColor="@color/gray700" />

		</androidx.appcompat.widget.LinearLayoutCompat>

		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/tv_attendance_history"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="29dp"
			android:gravity="start"
			android:text="출석 히스토리"
			android:textAppearance="@style/TextAppearance.Mashup.Header3_14_B"
			android:textColor="@color/gray700"
			app:layout_constraintStart_toStartOf="@id/layout_name_box"
			app:layout_constraintTop_toBottomOf="@id/layout_name_box" />

		<androidx.appcompat.widget.AppCompatImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="36dp"
			android:src="@drawable/ic_mashong_botton_hand"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent" />
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
